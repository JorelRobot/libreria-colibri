@{
}

<div class="container text-center mt-3 mb-3">
    <div class="content card">
        <div class="row">
            <div class="col col-12">
                <h1 class="mt-3 display-6">Mi Perfil</h1>
                <hr />
            </div>

            @*Columna de la imagen*@
            <div class="col-sm-12 col-md-5 justify-content-center">
                <div>
                    <img src="~/sources/images/IconoUsuario.png" alt="img-usr" class="w-50">
                </div>
            </div>

            @*Columna del formulario*@
            <div class="col-sm-12 col-md-7">
                <div class="p-3">
                    <form action="">
                        <div>
                            <h3 class="fw-light">Datos Personales</h3>
                            <input type="text" class="form-control col-10" placeholder="Nombre">
                            <br>
                        </div>
                        <div>
                            <input type="email" class="form-control col-10" placeholder="Correo" readonly="">
                            <br>
                        </div>
                        <div>
                            <input type="text" class="form-control col-10" placeholder="Telefono">
                            <hr>
                        </div>
                        <div>
                            <h3 class="fw-light">Direccion de envio</h3>
                            <input type="text" class="form-control col-10" placeholder="Direccion">
                            <br>
                        </div>
                        <div>
                            <input type="text" class="form-control col-2" placeholder="C.P.">
                            <br>
                        </div>
                        <div>
                            <input type="text" class="form-control col-10" placeholder="Ciudad">
                            <br>
                        </div>
                        <div>
                            <input type="text" class="form-control col-10" placeholder="Pais">
                            <br>
                        </div>
                        <div class="row">
                            <button type="button" class="btn btn-success mr-2 mt-1">Guardar cambios</button>
                            <button type="button" class="btn btn-danger ml-2 mt-1">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br>