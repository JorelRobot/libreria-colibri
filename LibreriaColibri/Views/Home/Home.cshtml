    <!--BOOKS-->

    <div class="container-md p-2">
        <div class="row pt-2">
            <h3 class="text-center pb-3 pt h1 text-shadow">
                LO MÁS VENDIDO
            </h3>
        </div>
        <div class="row">

            @foreach (var book in Model.BooksMostBuyers)
            {
                <div class="col-sm">
                    <div class="card border-primary book mb-5 w">
                        <img src="@book.Img" class="card-img-top align-self-center mt-2" alt="...">
                        <div class="card-body chtt">
                            <h4 class="card-title">@book.Title</h4>
                            <p class="text-warning">Precio: @book.Price</p>
                            <a class="btn btn-link" asp-controller="Book" asp-action="BookDetails" asp-route-id="@book.Id"> Ver más </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>


    <div id="separator-ribbon">
        <div class="content bg-warning "></div>
    </div>


    <!--lo mas nuevo-->
    <div class="container-md p-2">
        <div class="row pt-2">
            <h3 class="text-center pb-5 pt-2 h1 text-shadow">
                LO MÁS NUEVO
            </h3>
        </div>
        <div class="row">

            @foreach (var book in Model.BooksLastAdded)
            {
                <div class="col-sm">
                    <div class="card border-primary book mb-5">
                        <img src="@book.Img" class="card-img-top align-self-center mt-2" alt="...">
